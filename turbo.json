{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build", "generate"],
            "outputs": [".next/**", "!.next/cache/**", "dist/**", "bin/**", "graph/**/*.go"]
        },
        "generate": {
            "outputs": ["graph/**/*.go"],
            "inputs": ["internal/**/*.graphqls", "gqlgen.yml"]
        },
        "dev": {
            "cache": false,
            "persistent": true,
            "dependsOn": ["generate"]
        },
        "lint": {
            "dependsOn": ["^build"]
        },
        "test": {
            "dependsOn": ["generate"],
            "outputs": []
        },
        "clean": {
            "cache": false
        },
        "deps": {
            "cache": false
        }
    }
}
