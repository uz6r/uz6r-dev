{
    "name": "uzair",
    "private": true,
    "version": "0.0.0",
    "packageManager": "pnpm@10.29.3",
    "scripts": {
        "dev": "turbo run dev",
        "build": "turbo run build",
        "lint": "turbo run lint",
        "fmt": "markdownlint --fix '**/*.md' --ignore node_modules && prettier --write . && cd apps/api && make fmt",
        "fmt:check": "prettier --check . && cd apps/api && go fmt ./...",
        "lint:md": "markdownlint '**/*.md' --ignore node_modules",
        "clean": "turbo run clean && rm -rf node_modules"
    },
    "devDependencies": {
        "markdownlint-cli": "^0.47.0",
        "prettier": "^3.8.1",
        "turbo": "^2.8.7"
    }
}
